@model CreateSubscriptionModel

@{
    ViewData["Title"] = "Create subscription";
}

<div class="container">
    <h2>Create new subscription</h2>
    
    <div class="alert alert-danger">
        <p>Make sure the customer has a valid mandate. If the customer does not have a mandate you will not be able to create a subscription</p>
    </div>

    <form method="post">
        <div asp-validation-summary="All"></div>
        
        <input type="hidden" asp-for="CustomerId"/>

        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <label asp-for="Amount"></label>
                    <input class="form-control" asp-for="Amount" autocomplete="off" />
                </div>

                <div class="form-group">
                    <label asp-for="Currency"></label>
                    <select class="form-control" asp-for="Currency" asp-items="@Html.GetStaticStringSelectList(typeof(Currency))"></select>
                </div>

                <div class="form-group">
                    <label asp-for="Times"></label>
                    <input class="form-control" asp-for="Times" autocomplete="off" />
                </div>

                <div class="form-group">
                    <label asp-for="IntervalAmount"></label>
                    <input class="form-control" asp-for="IntervalAmount" autocomplete="off" />
                </div>

                <div class="form-group">
                    <label asp-for="IntervalPeriod"></label>
                    <select class="form-control" asp-for="IntervalPeriod" asp-items="@Html.GetEnumSelectList(typeof(IntervalPeriod))"></select>
                </div>

                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea class="form-control" asp-for="Description" rows="4"></textarea>
                </div>

                <input type="submit" name="Save" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>