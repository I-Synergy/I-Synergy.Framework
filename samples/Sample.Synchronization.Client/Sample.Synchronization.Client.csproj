<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <CodeAnalysisRuleSet>..\..\.sonarlint\i-synergy.frameworkcsharp.ruleset</CodeAnalysisRuleSet>
  </PropertyGroup>

  <ItemGroup>
    <AdditionalFiles Include="..\..\.sonarlint\i-synergy.framework\CSharp\SonarLint.xml" Link="SonarLint.xml" />
  </ItemGroup>

  <ItemGroup>
	  <PackageReference Include="Microsoft.AspNetCore.SignalR.Client" Version="6.0.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\ISynergy.Framework.Synchronization.Client\ISynergy.Framework.Synchronization.Client.csproj" />
    <ProjectReference Include="..\..\src\ISynergy.Framework.Synchronization.Files\ISynergy.Framework.Synchronization.Files.csproj" />
    <ProjectReference Include="..\..\src\ISynergy.Framework.Synchronization.SqlServer.ChangeTracking\ISynergy.Framework.Synchronization.SqlServer.ChangeTracking.csproj" />
    <ProjectReference Include="..\Sample.Synchronization.Common\Sample.Synchronization.Common.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Settings\FileSynchronizationOptions.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Settings\ClientSynchronizationOptions.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
