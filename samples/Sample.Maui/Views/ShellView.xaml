<?xml version="1.0" encoding="UTF-8" ?>
<FlyoutPage
    x:Class="Sample.Views.ShellView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:ISynergy.Framework.UI.Markup;assembly=ISynergy.Framework.UI.Maui"
    xmlns:c="clr-namespace:ISynergy.Framework.UI.Controls;assembly=ISynergy.Framework.UI.Maui"
    xmlns:converters="clr-namespace:ISynergy.Framework.UI.Converters;assembly=ISynergy.Framework.UI.Maui"
    xmlns:viewmodels="clr-namespace:Sample.ViewModels"
    xmlns:views="clr-namespace:Sample.Views"
    x:DataType="viewmodels:ShellViewModel"
    FlyoutLayoutBehavior="Popover">

    <FlyoutPage.Flyout>
        <c:NavigationMenu x:Name="MenuFlyout"/>
    </FlyoutPage.Flyout>
    
    <FlyoutPage.Detail>
        <NavigationPage />
    </FlyoutPage.Detail>
</FlyoutPage>
