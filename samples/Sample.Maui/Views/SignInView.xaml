<?xml version="1.0" encoding="utf-8" ?>
<c:View
    x:Class="Sample.Views.SignInView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:c="clr-namespace:ISynergy.Framework.UI.Controls;assembly=ISynergy.Framework.UI.Maui"
    xmlns:m="clr-namespace:ISynergy.Framework.UI.Markup;assembly=ISynergy.Framework.UI.Maui"
    xmlns:viewmodels="clr-namespace:Sample.ViewModels"
    Title="{Binding Title}"
    x:DataType="viewmodels:SignInViewModel">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="350" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Image
            Grid.Row="0"
            Grid.Column="1"
            Margin="10"
            HorizontalOptions="Center"
            SemanticProperties.Description="Logo"
            Source="dotnet_bot.png"
            VerticalOptions="Start"
            WidthRequest="400" />

        <VerticalStackLayout
            Grid.Row="1"
            Grid.Column="1"
            Spacing="5">
            <Label
                FontSize="Title"
                HorizontalOptions="Center"
                LineBreakMode="WordWrap"
                SemanticProperties.HeadingLevel="Level1"
                Text="{m:GetString LoginTitle}"
                TextColor="{DynamicResource Primary}" />
            <Label
                FontSize="Body"
                HorizontalOptions="Center"
                LineBreakMode="WordWrap"
                SemanticProperties.HeadingLevel="Level2"
                Text="{m:GetString LoginText}"
                TextColor="{DynamicResource Primary}" />
        </VerticalStackLayout>

        <ScrollView
            Grid.Row="2"
            Grid.Column="1"
            Margin="0,20">
            <VerticalStackLayout
                MaximumWidthRequest="250"
                Spacing="10"
                VerticalOptions="Center">
                <Entry
                    Keyboard="Email"
                    Placeholder="{m:GetString Username}"
                    Text="{Binding Username}" />
                <Entry
                    IsPassword="True"
                    Placeholder="{m:GetString Password}"
                    ReturnCommand="{Binding SignInCommand}"
                    Text="{Binding Password}" />
                <Button
                    Command="{Binding SignInCommand}"
                    HorizontalOptions="Center"
                    Text="{m:GetString SignIn}" />
            </VerticalStackLayout>
        </ScrollView>

        <StackLayout
            Grid.Row="3"
            Grid.Column="1"
            Margin="30"
            HorizontalOptions="Center"
            Orientation="Horizontal"
            Spacing="5"
            VerticalOptions="End">
            <Label Text="{m:GetString LoginNoAccount}" TextColor="{DynamicResource Gray600}" />
            <Label Text="{m:GetString SignupHere}" TextColor="{DynamicResource Primary}">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding SignUpCommand}" />
                </Label.GestureRecognizers>
            </Label>
        </StackLayout>

        <Grid
            Grid.RowSpan="4"
            Grid.ColumnSpan="3"
            IsVisible="{Binding CommonServices.BusyService.IsBusy, Mode=OneWay}">
            <Grid BackgroundColor="{AppThemeBinding Light={DynamicResource Gray100}, Dark={DynamicResource Gray900}}" Opacity="0.8"/>
            <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                <Label
                    FontSize="Caption"
                    IsVisible="{Binding CommonServices.BusyService.IsBusy, Mode=OneWay}"
                    Text="{Binding CommonServices.BusyService.BusyMessage, Mode=OneWay}"
                    TextColor="{DynamicResource Primary}" />
                <ActivityIndicator
                    x:Name="IsBusyProgressRing"
                    IsRunning="{Binding CommonServices.BusyService.IsBusy, Mode=OneWay}"
                    Color="{DynamicResource Primary}" />
            </VerticalStackLayout>
        </Grid>
        
        <c:ErrorPresenter
            Grid.Row="0"
            Grid.RowSpan="4"
            Grid.Column="1"
            VerticalOptions="Start" />
    </Grid>
</c:View>