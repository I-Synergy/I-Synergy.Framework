<?xml version="1.0" encoding="utf-8" ?>
<c:View 
    xmlns:c="clr-namespace:ISynergy.Framework.UI.Controls;assembly=ISynergy.Framework.UI.Maui"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:Sample.ViewModels"
    x:DataType="viewmodels:InfoViewModel"
    x:Class="Sample.Views.InfoView"
    NavigationPage.HasNavigationBar="False">

    <Grid>
        <VerticalStackLayout Margin="12" Spacing="12">
            <Label Text="Company name" />
            <Entry Text="{Binding CompanyName}" IsReadOnly="True"/>

            <Label Text="Product name" />
            <Entry Text="{Binding ProductName}" IsReadOnly="True"/>

            <!--<Label Text="Version"/>
            <Entry Text="{Binding Version}" IsReadOnly="True"/>-->

            <Label Text="Copyrights"/>
            <Entry Text="{Binding Copyrights}" IsReadOnly="True"/>

            <Label Text="Activation"/>
            <Entry Text="{Binding Startup}" IsReadOnly="True"/>

            <Label Text="Memo"/>
            <Editor />
        </VerticalStackLayout>
    </Grid>
</c:View>