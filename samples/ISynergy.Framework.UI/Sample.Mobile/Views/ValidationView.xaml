<?xml version="1.0" encoding="utf-8" ?>
<c:View 
    xmlns:c="clr-namespace:ISynergy.Framework.UI.Controls;assembly=ISynergy.Framework.UI.Maui"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="Sample.Views.ValidationView"
    Title="ValidationView">
    
    <VerticalStackLayout Margin="10">
        <c:ErrorPresenter />

        <Label Text="Id" />
        <c:IntegerEntry Value="{Binding SelectedItem.Id, Mode=TwoWay}"/>

        <Label Text="Description "/>
        <Entry Text="{Binding SelectedItem.Description, Mode=TwoWay}"/>

        <Button Text="Create new instance" Command="{Binding CreateInstance_Command}"/>
        <Button Text="Validate" Command="{Binding Submit_Command}"/>
    </VerticalStackLayout>
</c:View>