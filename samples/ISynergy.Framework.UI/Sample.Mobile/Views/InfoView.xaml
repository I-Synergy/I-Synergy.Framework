<?xml version="1.0" encoding="utf-8" ?>
<c:View 
    xmlns:c="clr-namespace:ISynergy.Framework.UI.Controls;assembly=ISynergy.Framework.UI.Maui"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sample.Views.InfoView"
             Title="InfoView">
    <Grid>
        <VerticalStackLayout Margin="10">
            <Label Text="Company name" />
            <Entry Text="{Binding CompanyName}" IsReadOnly="True"/>

            <Label Text="Product name" />
            <Entry Text="{Binding ProductName}" IsReadOnly="True"/>

            <Label Text="Version"/>
            <Entry Text="{Binding Version}" IsReadOnly="True"/>

            <Label Text="Copyrights"/>
            <Entry Text="{Binding Copyrights}" IsReadOnly="True"/>

            <Label Text="Activation"/>
            <Entry Text="{Binding Startup}" IsReadOnly="True"/>

            <Button Text="Set Busy On" Command="{Binding BusyOn_Command}"/>
            <Button Text="Set Busy Off" Command="{Binding BusyOff_Command}"/>
        </VerticalStackLayout>
        
        <ActivityIndicator IsRunning="{Binding BaseCommonServices.BusyService.IsBusy}"/>
    </Grid>
</c:View>