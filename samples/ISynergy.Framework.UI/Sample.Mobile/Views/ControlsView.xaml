<?xml version="1.0" encoding="utf-8" ?>
<c:View 
    xmlns:c="clr-namespace:ISynergy.Framework.UI.Controls;assembly=ISynergy.Framework.UI.Maui"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Sample.Views.ControlsView"
    xmlns:converters="clr-namespace:ISynergy.Framework.UI.Converters;assembly=ISynergy.Framework.UI.Maui"
    Title="ControlsView">

    <c:View.Resources>
        <converters:StringToDecimalConverter x:Key="StringToDecimalConverter" />
        <converters:StringToIntegerConverter x:Key="StringToIntegerConverter" />
        <converters:StringToDoubleConverter x:Key="StringToDoubleConverter" />
    </c:View.Resources>
    
    <VerticalStackLayout Spacing="10">
        <Label Text="Decimal:"/>
        <c:NumericEntry Type="Decimal" Text="{Binding DecimalValue, Converter={StaticResource StringToDecimalConverter}}" />

        <Label Text="Double:"/>
        <c:NumericEntry Type="Double" Text="{Binding DoubleValue, Converter={StaticResource StringToDoubleConverter}}" />

        <Label Text="Integer:"/>
        <c:NumericEntry Type="Integer" Text="{Binding IntegerValue, Converter={StaticResource StringToIntegerConverter}}" />
    </VerticalStackLayout>
</c:View>