<?xml version="1.0" encoding="utf-8" ?>
<c:View 
    xmlns:c="clr-namespace:ISynergy.Framework.UI.Controls;assembly=ISynergy.Framework.UI.Maui"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Sample.Views.ControlsView"
    xmlns:converters="clr-namespace:ISynergy.Framework.UI.Converters;assembly=ISynergy.Framework.UI.Maui"
    Title="ControlsView">

    <c:View.Resources>
        <converters:StringToDecimalConverter x:Key="StringToDecimalConverter" />
        <converters:StringToIntegerConverter x:Key="StringToIntegerConverter" />
        <converters:StringToDoubleConverter x:Key="StringToDoubleConverter" />
    </c:View.Resources>
    
    <VerticalStackLayout Spacing="10">
        <Label Text="Decimal:"/>
        <c:DecimalEntry Value="{Binding DecimalValue}" />

        <Label Text="Double:"/>
        <c:DoubleEntry Value="{Binding DoubleValue}" />

        <Label Text="Integer:"/>
        <c:IntegerEntry Value="{Binding IntegerValue}" />

        <Label Text="Entry:"/>
        <Entry Text="Hello Entry..." />
    </VerticalStackLayout>
</c:View>