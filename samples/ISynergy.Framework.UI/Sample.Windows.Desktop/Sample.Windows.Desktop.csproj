<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net5.0-windows10.0.19041.0</TargetFramework>
		<TargetPlatformMinVersion>10.0.17134.0</TargetPlatformMinVersion>
		<ApplicationManifest>app.manifest</ApplicationManifest>
		<Platforms>x86;x64;arm64</Platforms>
		<RuntimeIdentifiers>win10-x86;win10-x64;win10-arm64</RuntimeIdentifiers>
		<AssemblyName>Sample</AssemblyName>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.VCRTForwarders.140" Version="1.0.7" />
		<PackageReference Include="Microsoft.WinUI" Version="3.0.0-preview3.201113.0" />
		<Manifest Include="$(ApplicationManifest)" />
		<PackageReference Include="Microsoft.Extensions.Logging.Console" Version="1.1.2" />
		<PackageReference Include="Microsoft.Extensions.Logging.Filter" Version="1.1.2" />
		<PackageReference Include="Uno.Core" Version="2.2.0-dev.3" />
	</ItemGroup>
	
	<ItemGroup Condition="exists('..\Sample.Shared')">
		<Content Include="..\Sample.Shared\Assets\StoreLogo.scale-100.png" Link="Assets\StoreLogo.png" />
		<Content Include="..\Sample.Shared\Assets\StoreLogo.scale-100.png" Link="Assets\Square150x150Logo.png" />
		<Content Include="..\Sample.Shared\Assets\StoreLogo.scale-100.png" Link="Assets\Square44x44Logo.png" />
		<Content Include="..\Sample.Shared\Assets\SplashScreen.scale-100.png" Link="Assets\SplashScreen.png" />
		<Content Include="..\Sample.Shared\Assets\Fonts\uno-fluentui-assets.ttf" Link="Assets\Fonts\uno-fluentui-assets.ttf" />
	</ItemGroup>
	
	<ItemGroup>
		<ProjectReference Include="..\..\..\src\ISynergy.Framework.Core\ISynergy.Framework.Core.csproj" />
		<ProjectReference Include="..\..\..\src\ISynergy.Framework.Mvvm\ISynergy.Framework.Mvvm.csproj" />
		<ProjectReference Include="..\..\..\src\ISynergy.Framework.UI\ISynergy.Framework.UI.csproj" />
		<ProjectReference Include="..\Sample.Core\Sample.Core.csproj" />
	</ItemGroup>

	<Import Project="..\Sample.Shared\Sample.Shared.projitems" Label="Shared" />
</Project>
