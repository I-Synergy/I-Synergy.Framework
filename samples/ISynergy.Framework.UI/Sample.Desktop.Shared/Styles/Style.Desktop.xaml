<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:media="using:Microsoft.UI.Xaml.Media"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls">

    <media:AcrylicBrush x:Key="InAppAcrylicBrush" 
                        Opacity="1.0"
                        TintColor="LemonChiffon"
                        FallbackColor="#EE555555"
                        TintOpacity="0.2" />

    <media:AcrylicBrush x:Key="ThemeAcryllicBrush"
                        Opacity="1.0"
                        TintColor="LemonChiffon"
                        TintOpacity="0.2" />
    
    <Style TargetType="controls:BladeItem">
        <Setter Property="Width" Value="Auto" />
        <Setter Property="TitleBarVisibility" Value="Collapsed"/>
    </Style>
</ResourceDictionary>
