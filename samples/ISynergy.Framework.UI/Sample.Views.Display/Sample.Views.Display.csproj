<Project Sdk="MSBuild.Sdk.Extras">
	<Import Project="..\..\..\project.props" />
	
	<PropertyGroup>
		<TargetFrameworks>uap10.0.18362;net6.0-windows10.0.22000.0</TargetFrameworks>
		<GenerateLibraryLayout>true</GenerateLibraryLayout>
		<Description>Sample View for Display</Description>
		<EnableDefaultPageItems>false</EnableDefaultPageItems>
	</PropertyGroup>

	<Choose>
		<When Condition="'$(TargetFramework)' == 'net6.0-windows10.0.22000.0'">
			<PropertyGroup>
				<DefineConstants>NET5_0;WINDOWS</DefineConstants>
				<TargetPlatformMinVersion>10.0.18362.0</TargetPlatformMinVersion>
				<RuntimeIdentifiers>win10-x86;win10-x64;win10-arm64</RuntimeIdentifiers>
				<UseWinUI>true</UseWinUI>
			</PropertyGroup>
			<ItemGroup>
				<PackageReference Include="CommunityToolkit.WinUI.UI.Controls.Layout" Version="7.0.3" />
				<PackageReference Include="Microsoft.WindowsAppSDK" Version="1.0.0" />
			</ItemGroup>

			<ItemGroup>
				<Reference Include="Microsoft.Xaml.Interactions">
					<HintPath>..\..\resources\Microsoft.Xaml.Interactions.dll</HintPath>
				</Reference>
				<Reference Include="Microsoft.Xaml.Interactivity">
					<HintPath>..\..\resources\Microsoft.Xaml.Interactivity.dll</HintPath>
				</Reference>
			</ItemGroup>
		</When>
		<When Condition="'$(TargetFramework)' == 'uap10.0.18362'">
			<PropertyGroup>
				<TargetPlatformMinVersion>10.0.18362.0</TargetPlatformMinVersion>
			</PropertyGroup>
			<ItemGroup>
				<PackageReference Include="Microsoft.UI.Xaml" Version="2.7.0" />
				<PackageReference Include="Microsoft.Xaml.Behaviors.Uwp.Managed" Version="2.0.1" />
				<PackageReference Include="Microsoft.Toolkit.Uwp.UI.Controls.Layout" Version="7.1.1" />
			</ItemGroup>
		</When>
		<Otherwise>
			<ItemGroup>
				<PackageReference Include="Microsoft.Windows.Compatibility" Version="6.0.0" />
				<PackageReference Include="Uno.Extensions.Logging.WebAssembly.Console" Version="1.1.0" />
				<PackageReference Include="Uno.Microsoft.Xaml.Behaviors.WinUI.Managed" Version="2.0.5" />
				<PackageReference Include="Uno.Microsoft.Toolkit.WinUI.Controls.Layout" Version="7.0.0" />
				<PackageReference Include="Uno.WinUI.WebAssembly" Version="3.11.6" />
			</ItemGroup>
		</Otherwise>
	</Choose>

	<ItemGroup>
	  <None Remove="SlideShowView.xaml" />
	</ItemGroup>

	<ItemGroup>
	  <Page Include="SlideShowView.xaml">
	    <SubType>Designer</SubType>
	    <Generator>MSBuild:Compile</Generator>
	  </Page>
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\..\src\ISynergy.Framework.Core\ISynergy.Framework.Core.csproj" />
		<ProjectReference Include="..\..\..\src\ISynergy.Framework.Mvvm\ISynergy.Framework.Mvvm.csproj" />
		<ProjectReference Include="..\..\..\src\ISynergy.Framework.UI.WinUI\ISynergy.Framework.UI.WinUI.csproj" />
	</ItemGroup>

	<ItemGroup>
	  <Compile Update="SlideShowView.xaml.cs">
	    <DependentUpon>SlideShowView.xaml</DependentUpon>
	  </Compile>
	</ItemGroup>
</Project>
