                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>



    <ControlTemplate TargetType="ContentDialog" x:Key="WindowTemplate">
        <Border x:Name="Container"
                MaxWidth="{TemplateBinding MaxWidth}"
                MaxHeight="{TemplateBinding MaxHeight}"
                MinWidth="{TemplateBinding MinWidth}"
                MinHeight="{TemplateBinding MinHeight}"
                Width="{TemplateBinding Width}"
                Height="{TemplateBinding Height}">
            <Grid x:Name="LayoutRoot" Margin="-1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Border x:Name="BackgroundElement"
                                    Background="{TemplateBinding Background}"
                                    FlowDirection="{TemplateBinding FlowDirection}"
                                    BorderThickness="{ThemeResource ContentDialogBorderWidth}"
                                    BorderBrush="{StaticResource WindowsBorder}"
                                    MaxWidth="{TemplateBinding MaxWidth}"
                                    MaxHeight="{TemplateBinding MaxHeight}"
                                    MinWidth="{TemplateBinding MinWidth}"
                                    MinHeight="{TemplateBinding MinHeight}"
                                    Width="{TemplateBinding Width}"
                                    Height="{TemplateBinding Height}">
                    <Grid x:Name="DialogSpace" VerticalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid>
                            <ContentControl x:Name="Title"
                                                Margin="10"
                                                Content="{TemplateBinding Title}"
                                                ContentTemplate="{TemplateBinding TitleTemplate}"
                                                FontSize="20"
                                                FontFamily="{ThemeResource ContentControlThemeFontFamily}"
                                                FontWeight="Normal"
                                                Foreground="{TemplateBinding Foreground}"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top"
                                                IsTabStop="False"
                                                MaxHeight="{ThemeResource ContentDialogTitleMaxHeight}" >
                                <ContentControl.Template>
                                    <ControlTemplate TargetType="ContentControl">
                                        <ContentPresenter 
                                            Content="{TemplateBinding Content}"
                                            MaxLines="2"
                                            TextWrapping="Wrap"
                                            FontWeight="SemiBold"
                                            ContentTemplate="{TemplateBinding ContentTemplate}"
                                            Margin="{TemplateBinding Padding}"
                                            ContentTransitions="{TemplateBinding ContentTransitions}"
                                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                                    </ControlTemplate>
                                </ContentControl.Template>
                            </ContentControl>
                            <Button x:Name="Button_Close" Content="{StaticResource tb_close}" Style="{StaticResource IconButtonStyle}" Command="{Binding Close_Command}" ToolTipService.ToolTip="Close" HorizontalAlignment="Right" Margin="10" Height="26" Width="26"/>
                        </Grid>
                        <ScrollViewer Grid.Row="1" x:Name="ContentScrollViewer"
                            HorizontalScrollBarVisibility="Disabled"
