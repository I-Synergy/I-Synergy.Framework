<app:BaseApplication
    x:Class="Sample.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:app="using:ISynergy.Framework.UI">

    <app:BaseApplication.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" ControlsResourcesVersion="Version2"/>
                <ResourceDictionary Source="ms-appx:///Assets/Images.xaml" />
                <ResourceDictionary Source="ms-appx:///Styles/Style.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <ResourceDictionary.ThemeDictionaries>
                <ColorPaletteResources x:Key="Red" Accent="{ThemeResource SystemAccentColor}" />
                <ColorPaletteResources x:Key="Dark" Accent="{ThemeResource SystemAccentColor}" />
                <ColorPaletteResources x:Key="Default" Accent="{ThemeResource SystemAccentColor}"/>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </app:BaseApplication.Resources>
</app:BaseApplication>
