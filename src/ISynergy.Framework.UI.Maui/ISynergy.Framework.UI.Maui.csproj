<Project Sdk="Microsoft.NET.Sdk">
	<Import Project="..\..\project.props" />
	<PropertyGroup>
		<TargetFrameworks>net7.0;net7.0-android;net7.0-ios;net7.0-maccatalyst</TargetFrameworks>
		<TargetFrameworks>$(TargetFrameworks);net8.0;net8.0-android;net8.0-ios;net8.0-maccatalyst</TargetFrameworks>
		<TargetFrameworks Condition="$([MSBuild]::IsOSPlatform('windows'))">$(TargetFrameworks);net7.0-windows10.0.19041.0;net8.0-windows10.0.19041.0</TargetFrameworks>
		<UseMaui>true</UseMaui>
		<SingleProject>true</SingleProject>
		<PublishReadyToRun>false</PublishReadyToRun>
		<GenerateLibraryLayout>true</GenerateLibraryLayout>
		<PackageId>I-Synergy.Framework.UI.Maui</PackageId>
		<Description>I-Synergy UI Framework for .Net Maui</Description>
		<PackageTags>I-Synergy, Framework, UI, Windows, Linux, Android, IOS, Maui</PackageTags>
		<EnablePreviewMsixTooling>true</EnablePreviewMsixTooling>
		<IncludeSymbols>true</IncludeSymbols>
		<IncludeBuildOutput>true</IncludeBuildOutput>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>

		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'ios'">11.0</SupportedOSPlatformVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'maccatalyst'">13.1</SupportedOSPlatformVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'android'">21.0</SupportedOSPlatformVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'windows'">10.0.17763.0</SupportedOSPlatformVersion>
		<TargetPlatformMinVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'windows'">10.0.17763.0</TargetPlatformMinVersion>
		<RootNamespace>ISynergy.Framework.UI</RootNamespace>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="CommunityToolkit.Maui" Version="6.1.0" />
		<PackageReference Include="CommunityToolkit.Maui.Markup" Version="3.3.0" />
	</ItemGroup>

	<Choose>
		<When Condition="$(TargetFramework.StartsWith('net8.0')) == true">
			<ItemGroup>
				<PackageReference Include="Microsoft.Maui.Controls" Version="8.0.0-rc.2.9373" />
				<PackageReference Include="Microsoft.Maui.Controls.Compatibility" Version="8.0.0-rc.2.9373" />
				<PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="8.0.0-rc.2.23479.6" />
				<PackageReference Include="Microsoft.Extensions.Logging.Debug" Version="8.0.0-rc.2.23479.6" />
			</ItemGroup>
		</When>
		<Otherwise>
			<ItemGroup>
				<PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="7.0.0" />
				<PackageReference Include="Microsoft.Extensions.Logging.Debug" Version="7.0.0" />
			</ItemGroup>
		</Otherwise>
	</Choose>

	<ItemGroup>
	  <ProjectReference Include="..\ISynergy.Framework.Mvvm\ISynergy.Framework.Mvvm.csproj" />
	  <ProjectReference Include="..\ISynergy.Framework.UI\ISynergy.Framework.UI.csproj" />
	</ItemGroup>

	<ItemGroup>
		<Using Include="ISynergy.Framework.Core.Models.Style">
			<Alias>Style</Alias>
		</Using>
		<Using Include="ISynergy.Framework.Mvvm.Abstractions.IView">
			<Alias>IView</Alias>
		</Using>
		<Using Include="ISynergy.Framework.Mvvm.Abstractions.IWindow">
			<Alias>IWindow</Alias>
		</Using>
		<Using Include="ISynergy.Framework.UI.Controls.Window">
			<Alias>Window</Alias>
		</Using>
	</ItemGroup>

	<ItemGroup>
	  <MauiXaml Update="Controls\ErrorPresenter\ErrorPresenter.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
	  <MauiXaml Update="Resources\Styles\Generic.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
	  <MauiXaml Update="Views\LoadingView.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
	  <MauiXaml Update="Windows\NoteWindow.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
	  <MauiXaml Update="Windows\SelectionWindow.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
	</ItemGroup>

	<ItemGroup>
		<!-- Custom Fonts -->
		<MauiFont Include="Resources\Fonts\*" />
	</ItemGroup>
</Project>
