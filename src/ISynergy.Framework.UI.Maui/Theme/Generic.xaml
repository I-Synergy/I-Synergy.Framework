        <Setter Property="SelectedTabColor" Value="{AppThemeBinding Light={StaticResource Gray950}, Dark={StaticResource Gray200}}" />
    </Style>

    <ControlTemplate x:Key="DefaultDialogTemplate">
        <Frame BindingContext="{Binding Source={RelativeSource AncestorType={x:Type controls:Window}}, Path=ViewModel}"
               BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
               CornerRadius="8"
               HasShadow="True"
               Padding="8"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Text="{Binding Title}" FontSize="Title" HorizontalOptions="StartAndExpand" Margin="8,4" />

                <ScrollView Grid.Row="1" Margin="{StaticResource DefaultMargin}">
                    <ContentPresenter />
                </ScrollView>

                <Grid Grid.Row="2">
                    <HorizontalStackLayout HorizontalOptions="EndAndExpand" Spacing="8">
                        <Button Text="{m:GetString Cancel}" Command="{Binding Close_Command}"/>
                        <Button Text="{m:GetString Ok}" Command="{Binding Submit_Command}" CommandParameter="{Binding SelectedItem}"/>
                    </HorizontalStackLayout>
                </Grid>
            </Grid>
        </Frame>
    </ControlTemplate>
</ResourceDictionary>