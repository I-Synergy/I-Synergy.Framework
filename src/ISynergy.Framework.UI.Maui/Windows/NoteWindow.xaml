<?xml version="1.0" encoding="utf-8" ?>
<c:Window xmlns:c="clr-namespace:ISynergy.Framework.UI.Controls"
          xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
          x:Class="ISynergy.Framework.UI.Windows.NoteWindow"
          Title="{Binding Title}">

    <ContentView 
        ControlTemplate="{StaticResource DefaultDialogTemplate}"
        WidthRequest="{OnPlatform WinUI=600, Default=400}">

        <Grid Margin="10">
            <Editor
                Text="{Binding SelectedItem, Mode=TwoWay}"
                Placeholder=""
                HeightRequest="300"
                IsSpellCheckEnabled="True"
                IsTextPredictionEnabled="True"/>
        </Grid>
    </ContentView>
</c:Window>