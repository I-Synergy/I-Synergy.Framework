<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:ISynergy.Framework.UI.Converters"
             x:Class="ISynergy.Framework.UI.Controls.ErrorPresenter"
             IsVisible="{Binding IsValid, Converter={StaticResource InverseBooleanConverter}}"
             Margin="0,5"
             Opacity="0.85">

    <ContentView.Resources>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    </ContentView.Resources>
    
    <Frame CornerRadius="8" BackgroundColor="{DynamicResource RedAccent}">
        <CollectionView ItemsSource="{Binding Errors}" SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding}" TextColor="White" FontSize="12" FontAttributes="Bold"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Frame>
</ContentView>
