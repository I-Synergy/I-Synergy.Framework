<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:ISynergy.Framework.UI.Converters"
             x:Class="ISynergy.Framework.UI.Controls.ErrorPresenter"
             IsVisible="{Binding HasErrors}"
             Margin="0,5"
             Opacity="0.85">
    
    <Border
        StrokeThickness="0"
        BackgroundColor="{DynamicResource RedAccent}">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="{StaticResource DefaultCornerRadius}"/>
        </Border.StrokeShape>
        <StackLayout BindableLayout.ItemsSource="{Binding Errors}" Margin="10">
            <BindableLayout.ItemTemplate>
                <DataTemplate>
                    <Label TextColor="White">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="&#xe7c8;" FontFamily="SegoeMdl2" FontSize="8" FontAttributes="Bold"/>
                                <Span Text=" "/>
                                <Span Text="{Binding Value}" FontSize="12" FontAttributes="Bold"/>
                            </FormattedString> 
                        </Label.FormattedText>
                    </Label>
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </StackLayout>
    </Border>
</ContentView>
