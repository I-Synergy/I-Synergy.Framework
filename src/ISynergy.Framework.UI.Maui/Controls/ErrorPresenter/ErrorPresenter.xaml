<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:ISynergy.Framework.UI.Converters"
             x:Class="ISynergy.Framework.UI.Controls.ErrorPresenter"
             IsVisible="{Binding HasErrors}"
             Margin="0,5"
             Opacity="0.85">
    
    <Border
        StrokeThickness="0"
        BackgroundColor="{DynamicResource RedAccent}">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="{StaticResource DefaultCornerRadius}"/>
        </Border.StrokeShape>
        <CollectionView ItemsSource="{Binding Errors}" SelectionMode="None" Margin="10,0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding Value}" TextColor="White" FontSize="12" FontAttributes="Bold"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Border>
</ContentView>
