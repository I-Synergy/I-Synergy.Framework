<Window x:Class="ISynergy.Framework.UI.Controls.Toasts.NotificationsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ISynergy.Framework.UI.Controls.ToastNotification"
        mc:Ignorable="d"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None" 
        WindowState="Normal" 
        WindowStartupLocation="Manual" 
        ShowInTaskbar="False"
        SizeToContent="WidthAndHeight" 
        Topmost="True" 
        ShowActivated="False">
    <Grid>
        <local:NotificationsItemsControl x:Name="NotificationsList" ShouldReverseItems="False" />
    </Grid>
</Window>
