<Project Sdk="MSBuild.Sdk.Extras">
	<Import Project="..\..\project.props" />

	<PropertyGroup>
		<TargetFrameworks>net6.0-windows10.0.22621;netstandard2.0;net6.0-android</TargetFrameworks>
		<PackageId>I-Synergy.Framework.Telemetry.Sentry</PackageId>
		<Description>I-Synergy Framework Sentry Telemetry library for Windows, Linux, Android and WebAssembly</Description>
		<PackageTags>I-Synergy, Framework, Telemetry, Sentry, Windows, Linux, Android, WebAssembly, Uno</PackageTags>
		<RootNamespace>ISynergy.Framework.Telemetry.Sentry</RootNamespace>
		<GenerateLibraryLayout>true</GenerateLibraryLayout>
		<EnablePreviewMsixTooling>true</EnablePreviewMsixTooling>
		<IncludeSymbols>true</IncludeSymbols>
		<GeneratePackageOnBuild>false</GeneratePackageOnBuild>
		<IncludeSymbols>true</IncludeSymbols>
		<IncludeBuildOutput>true</IncludeBuildOutput>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<CodeAnalysisRuleSet>..\..\.sonarlint\i-synergy.frameworkcsharp.ruleset</CodeAnalysisRuleSet>
	</PropertyGroup>
	<PropertyGroup Condition="'$(TargetFramework)'=='net6.0-windows10.0.22621'">
		<TargetPlatformMinVersion>10.0.17763.0</TargetPlatformMinVersion>
	</PropertyGroup>
	<ItemGroup>
		<PackageReference Include="Uno.WinUI" Version="4.6.19" />
		<PackageReference Include="Sentry" Version="3.23.1" />
		<PackageReference Include="Microsoft.Extensions.Options" Version="6.0.0" />
	</ItemGroup>
	<ItemGroup Condition="'$(TargetFramework)'=='net6.0-windows10.0.22621'">
		<PackageReference Include="Microsoft.WindowsAppSDK" Version="1.1.5" />
	</ItemGroup>
	<ItemGroup Condition="'$(TargetFramework)'!='net6.0-windows10.0.22621'">
		<Page Include="**\*.xaml" Exclude="bin\**\*.xaml;obj\**\*.xaml" />
		<Compile Update="**\*.xaml.cs">
			<DependentUpon>%(Filename)</DependentUpon>
		</Compile>
	</ItemGroup>
	<ItemGroup>
		<UpToDateCheckInput Include="**\*.xaml" Exclude="bin\**\*.xaml;obj\**\*.xaml" />
	</ItemGroup>
	<ItemGroup>
	  <AdditionalFiles Include="..\..\.sonarlint\i-synergy.framework\CSharp\SonarLint.xml" Link="SonarLint.xml" />
	</ItemGroup>
	<ItemGroup>
		<ProjectReference Include="..\ISynergy.Framework.Core\ISynergy.Framework.Core.csproj" />
		<ProjectReference Include="..\ISynergy.Framework.Telemetry\ISynergy.Framework.Telemetry.csproj" />
	</ItemGroup>
</Project>