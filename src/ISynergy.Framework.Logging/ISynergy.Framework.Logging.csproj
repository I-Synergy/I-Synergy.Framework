<Project Sdk="Microsoft.NET.Sdk">
    <Import Project="..\..\project.props" />
    <PropertyGroup>
		<TargetFrameworks>netstandard2.0;net6.0;net7.0;net8.0</TargetFrameworks>
		<PackageId>I-Synergy.Framework.Logging</PackageId>
		<Description>I-Synergy Framework Logging library for .net Standard 2.0, .net 6.0, .net 7.0 and .net 8.0</Description>
		<PackageTags>I-Synergy, Framework, Logging</PackageTags>
		<GenerateLibraryLayout>true</GenerateLibraryLayout>
		<CodeAnalysisRuleSet>ISynergy.Framework.Logging.ruleset</CodeAnalysisRuleSet>
    </PropertyGroup>

	<ItemGroup Condition="'$(TargetFramework)'!='net8.0'">
		<PackageReference Include="Microsoft.Extensions.Logging" Version="7.0.0" />
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)'=='net8.0'">
		<PackageReference Include="Microsoft.Extensions.Logging" Version="8.0.0-rc.1.23419.4" />
	</ItemGroup>

	<ItemGroup>
      <ProjectReference Include="..\ISynergy.Framework.Core\ISynergy.Framework.Core.csproj" />
    </ItemGroup>
</Project>
