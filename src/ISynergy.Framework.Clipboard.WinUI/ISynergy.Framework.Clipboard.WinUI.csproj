<Project Sdk="Microsoft.NET.Sdk">
	<Import Project="..\ISynergy.Framework.Clipboard.Shared\ISynergy.Framework.Clipboard.Shared.projitems" Label="Shared" />
	<Import Project="..\..\project.props" />

	<PropertyGroup>
		<TargetFrameworks>net6.0-windows10.0.18362;net6.0-windows10.0.19041;net6.0-windows10.0.20348;net6.0-windows10.0.22000</TargetFrameworks>
		<TargetPlatformMinVersion>10.0.18362.0</TargetPlatformMinVersion>
		<RuntimeIdentifiers>win10-x86;win10-x64;win10-arm64</RuntimeIdentifiers>
		<PackageId>I-Synergy.Framework.Clipboard.WinUI</PackageId>
		<Description>I-Synergy Framework Clipboard for WinUI</Description>
		<PackageTags>I-Synergy, Framework, Clipboard, WinUI</PackageTags>
		<RootNamespace>ISynergy.Framework.Clipboard</RootNamespace>
		<GenerateLibraryLayout>true</GenerateLibraryLayout>
		<IncludeSymbols>true</IncludeSymbols>
		<GeneratePackageOnBuild>false</GeneratePackageOnBuild>
		<IncludeSymbols>true</IncludeSymbols>
		<IncludeBuildOutput>true</IncludeBuildOutput>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<EnableDefaultPageItems>false</EnableDefaultPageItems>
		<CodeAnalysisRuleSet>..\..\.sonarlint\i-synergy.frameworkcsharp.ruleset</CodeAnalysisRuleSet>
		<UseWinUI>true</UseWinUI>
	</PropertyGroup>

	<ItemGroup>
	  <AdditionalFiles Include="..\..\.sonarlint\i-synergy.framework\CSharp\SonarLint.xml" Link="SonarLint.xml" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.WindowsAppSDK" Version="1.1.2" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\ISynergy.Framework.Clipboard\ISynergy.Framework.Clipboard.csproj" />
	  <ProjectReference Include="..\ISynergy.Framework.Mvvm\ISynergy.Framework.Mvvm.csproj" />
	</ItemGroup>
</Project>
