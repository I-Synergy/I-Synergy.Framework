<Project Sdk="Microsoft.NET.Sdk">
	<Import Project="..\ISynergy.Framework.Telemetry.Sentry.Shared\ISynergy.Framework.Telemetry.Sentry.Shared.projitems" Label="Shared" />
	<Import Project="..\..\project.props" />

	<PropertyGroup>
		<TargetFrameworks>net6.0-windows10.0.18362;net6.0-windows10.0.19041;net6.0-windows10.0.20348;net6.0-windows10.0.22000</TargetFrameworks>
		<TargetPlatformMinVersion>10.0.18362.0</TargetPlatformMinVersion>
		<RuntimeIdentifiers>win10-x86;win10-x64;win10-arm64</RuntimeIdentifiers>
		<PackageId>I-Synergy.Framework.Telemetry.ApplicationInsights.WinUI</PackageId>
		<Description>I-Synergy Framework Telemetry library for ApplicationInsights WinUI</Description>
		<PackageTags>I-Synergy, Framework, Telemetry, ApplicationInsights, WinUI</PackageTags>
		<RootNamespace>ISynergy.Framework.Telemetry.ApplicationInsights</RootNamespace>
		<GenerateLibraryLayout>true</GenerateLibraryLayout>
		<IncludeSymbols>true</IncludeSymbols>
		<GeneratePackageOnBuild>false</GeneratePackageOnBuild>
		<IncludeSymbols>true</IncludeSymbols>
		<IncludeBuildOutput>true</IncludeBuildOutput>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<EnableDefaultPageItems>false</EnableDefaultPageItems>
		<CodeAnalysisRuleSet>..\..\.sonarlint\i-synergy.frameworkcsharp.ruleset</CodeAnalysisRuleSet>
		<UseWinUI>true</UseWinUI>
	</PropertyGroup>

	<ItemGroup>
	  <AdditionalFiles Include="..\..\.sonarlint\i-synergy.framework\CSharp\SonarLint.xml" Link="SonarLint.xml" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Options" Version="6.0.0" />
		<PackageReference Include="Sentry" Version="3.19.0" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\ISynergy.Framework.Telemetry\ISynergy.Framework.Telemetry.csproj" />
		<ProjectReference Include="..\ISynergy.Framework.Core\ISynergy.Framework.Core.csproj" />
	</ItemGroup>
</Project>

