@inject IMessageService MessageService
@implements IDialogContentComponent<ILocalSettings>

<div>
    <FluentStack>
        <FluentSpacer />
        <FluentAnchor Appearance="@Appearance.Hypertext" Href="" OnClick="@(e => MessageService.Clear(MessageConstants.MESSAGES_NOTIFICATION_CENTER))">
            Dismiss all
        </FluentAnchor>
    </FluentStack>

    <br />

    <FluentMessageBarProvider Section="@MessageConstants.MESSAGES_NOTIFICATION_CENTER" MaxMessageCount="-1" Type="@MessageType.Notification" />
</div>

@code {
    [Parameter]
    public ILocalSettings Content { get; set; } = default!;
}