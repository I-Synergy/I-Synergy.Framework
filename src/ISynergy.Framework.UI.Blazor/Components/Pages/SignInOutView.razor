<AuthorizeView>
    <Authorized>
        
    </Authorized>
    <NotAuthorized>
        <FluentButton BackgroundColor="var(--neutral-layer-4)" OnClick="SignIn" Title="Sign In">
            <FluentIcon Value="@(new Icons.Regular.Size20.ShieldPerson())" Color="Color.Neutral" Title="Sign In" />
        </FluentButton>
    </NotAuthorized>
</AuthorizeView>

@code {
    [Inject]
    private NavigationManager NavigationManager { get; set; } = default!;

    [Inject]
    private IContext Context { get; set; } = default!;

    public void SignOut()
    {
        NavigationManager.NavigateTo("/identity/signout");
    }

    public void SignIn()
    {
        NavigationManager.NavigateTo("/identity/signin");
    }
}