<Project Sdk="Microsoft.NET.Sdk">
	<Import Project="..\..\project.props" />

	<PropertyGroup>
		<TargetFrameworks>net472;net48;netstandard2.0;netstandard2.1;net5.0;net6.0</TargetFrameworks>
		<PackageId>I-Synergy.Framework.IO</PackageId>
		<Description>I-Synergy IO Framework for .Net Framework 4.7.2, .Net Framework 4.8, .Net Standard 2.0, .Net Standard 2.1, .Net 5.0 and .Net 6.0</Description>
		<PackageTags>I-Synergy, Framework, IO</PackageTags>
		<IncludeSymbols>true</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<CodeAnalysisRuleSet>..\..\.sonarlint\i-synergy.frameworkcsharp.ruleset</CodeAnalysisRuleSet>
	</PropertyGroup>

	<ItemGroup>
	  <None Remove="FileTypeDefinitions.json" />
	</ItemGroup>

	<ItemGroup>
	  <AdditionalFiles Include="..\..\.sonarlint\i-synergy.framework\CSharp\SonarLint.xml" Link="SonarLint.xml" />
	</ItemGroup>

	<ItemGroup>
		<EmbeddedResource Include="FileTypeDefinitions.json">
			<LogicalName>FileTypeDefinitions.json</LogicalName> 
		</EmbeddedResource>
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\ISynergy.Framework.Core\ISynergy.Framework.Core.csproj" />
	</ItemGroup>

	<ItemGroup>
		<Compile Update="Watchers\FileSystemWatcherEx.cs">
			<SubType>Component</SubType>
		</Compile>
	</ItemGroup>

</Project>
