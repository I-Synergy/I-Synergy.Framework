<Project Sdk="Microsoft.NET.Sdk">
    <Import Project="..\..\project.props" />

    <PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
        <PackageId>I-Synergy.Framework.AspNetCore.Authentication</PackageId>
        <Description>I-Synergy Framework Authentication for .Net 6.0</Description>
        <PackageTags>I-Synergy, Framework, AspNetCore, Authentication, OAuth</PackageTags>
		<GenerateLibraryLayout>true</GenerateLibraryLayout>
		<IncludeSymbols>true</IncludeSymbols>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<IncludeSymbols>true</IncludeSymbols>
		<IncludeBuildOutput>true</IncludeBuildOutput>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="System.IdentityModel.Tokens.Jwt" Version="6.14.1" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\ISynergy.Framework.AspNetCore\ISynergy.Framework.AspNetCore.csproj" />
    </ItemGroup>

	<ItemGroup>
		<Using Include="ISynergy.Framework.AspNetCore.Authentication.Abstractions.Services"/>
		<Using Include="ISynergy.Framework.AspNetCore.Authentication.Exceptions"/>
		<Using Include="ISynergy.Framework.AspNetCore.Authentication.Extensions"/>
		<Using Include="ISynergy.Framework.AspNetCore.Authentication.Options"/>
		<Using Include="ISynergy.Framework.Core.Constants"/>
		<Using Include="ISynergy.Framework.Core.Models"/>
		<Using Include="Microsoft.AspNetCore.Http"/>
		<Using Include="Microsoft.AspNetCore.Identity"/>
		<Using Include="Microsoft.AspNetCore.Mvc"/>
		<Using Include="Microsoft.AspNetCore.Mvc.Filters"/>
		<Using Include="Microsoft.Extensions.Options"/>
		<Using Include="Microsoft.IdentityModel.Tokens"/>
		<Using Include="System.IdentityModel.Tokens.Jwt"/>
		<Using Include="System.Runtime.Serialization"/>
		<Using Include="System.Security.Claims"/>
		<Using Include="System.Security.Principal"/>
		<Using Include="System.Text"/>
		<Using Include="System.Text.RegularExpressions"/>
	</ItemGroup>
</Project>
