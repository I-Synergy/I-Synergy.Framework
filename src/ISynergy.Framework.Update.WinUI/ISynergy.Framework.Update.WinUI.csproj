<Project Sdk="Microsoft.NET.Sdk">
	<Import Project="..\..\project.props" />

	<PropertyGroup>
		<TargetFrameworks>net7.0-windows10.0.19041;net7.0;net7.0-ios;net7.0-maccatalyst;net7.0-android</TargetFrameworks>
		<TargetFrameworks>$(TargetFrameworks);net8.0-windows10.0.19041;net8.0;net8.0-ios;net8.0-maccatalyst;net8.0-android</TargetFrameworks>
		<RootNamespace>ISynergy.Framework.Update</RootNamespace>
		<GenerateLibraryLayout>true</GenerateLibraryLayout>
		<PackageId>I-Synergy.Framework.Update.WinUI</PackageId>
		<Description>I-Synergy Update Framework for Windows</Description>
		<PackageTags>I-Synergy, Framework, Update, Windows, WinUI, WinUI3</PackageTags>
		<EnableMsixTooling>true</EnableMsixTooling>
		<IncludeSymbols>true</IncludeSymbols>
		<IncludeBuildOutput>true</IncludeBuildOutput>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<EnableDefaultPageItems>false</EnableDefaultPageItems>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="8.0.0" />
	</ItemGroup>

	<Choose>
		<When Condition="'$(TargetFramework)'=='net8.0-windows10.0.19041' OR '$(TargetFramework)'=='net7.0-windows10.0.19041'">
			<ItemGroup>
				<PackageReference Include="Microsoft.WindowsAppSDK" Version="1.4.231219000" />
				<PackageReference Include="Microsoft.Windows.SDK.BuildTools" Version="10.0.22621.2428" />
			</ItemGroup>
		</When>
		<Otherwise>
			<ItemGroup>
				<PackageReference Include="Uno.WinUI" Version="5.0.152" />
			</ItemGroup>

			<ItemGroup>
				<Content Include="Assets\**" />
				<Page Include="**\*.xaml" Exclude="bin\**\*.xaml;obj\**\*.xaml" />
				<Compile Update="**\*.xaml.cs">
					<DependentUpon>%(Filename)</DependentUpon>
				</Compile>
			</ItemGroup>
			<ItemGroup>
				<UpToDateCheckInput Include="**\*.xaml" Exclude="bin\**\*.xaml;obj\**\*.xaml" />
			</ItemGroup>
		</Otherwise>
	</Choose>
	
	<ItemGroup>
		<ProjectReference Include="..\ISynergy.Framework.Core\ISynergy.Framework.Core.csproj" />
		<ProjectReference Include="..\ISynergy.Framework.Mvvm\ISynergy.Framework.Mvvm.csproj" />
		<ProjectReference Include="..\ISynergy.Framework.Update\ISynergy.Framework.Update.csproj" />
	</ItemGroup>
</Project>
