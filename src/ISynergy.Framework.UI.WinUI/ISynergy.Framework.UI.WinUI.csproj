		<ItemGroup>
			<_TargetFrameworks Include="$(TargetFrameworks)" />
		</ItemGroup>
		<ItemGroup>
			<_PackageFiles Include="Assets\**\*.*" Condition="'%(_TargetFrameworks.Identity)' != ''">
				<BuildAction>Content</BuildAction>
				<CopyToOutput>true</CopyToOutput>
				<PackagePath>lib\$([System.Text.RegularExpressions.Regex]::Replace('%(_TargetFrameworks.Identity)','\.0$',''))\$(AssemblyName)\Assets</PackagePath>
			</_PackageFiles>

			<_PackageFiles Include="bin\$(Configuration)\%(_TargetFrameworks.Identity)\runtimes\**\*.*" Condition="'%(_TargetFrameworks.Identity)' != ''">
				<PackagePath>lib\$([System.Text.RegularExpressions.Regex]::Replace('%(_TargetFrameworks.Identity)','\.0$',''))\$(AssemblyName)\runtimes</PackagePath>
			</_PackageFiles>
		</ItemGroup>
	</Target>
	
