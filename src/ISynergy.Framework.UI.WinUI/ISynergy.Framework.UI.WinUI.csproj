<Project Sdk="MSBuild.Sdk.Extras">
	<Import Project="..\..\project.props" />

	<PropertyGroup>
		<TargetFrameworks>uap10.0.18362;net6.0;net6.0-windows10.0.22000.0</TargetFrameworks>
		<PackageId>I-Synergy.Framework.UI.WinUI</PackageId>
		<Description>I-Synergy Framework UI (WinUI) for UWP, .Net 6.0 and WinUI</Description>
		<PackageTags>I-Synergy, Framework, UI, WinUI, UWP, UAP</PackageTags>
		<GenerateLibraryLayout>true</GenerateLibraryLayout>
		<IncludeSymbols>true</IncludeSymbols>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<IncludeSymbols>true</IncludeSymbols>
		<IncludeBuildOutput>true</IncludeBuildOutput>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<EnableDefaultPageItems>false</EnableDefaultPageItems>
		<RootNamespace>ISynergy.Framework.UI</RootNamespace>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
	</ItemGroup>

	<Choose>
		<When Condition="'$(TargetFramework)' == 'uap10.0.18362'">
			<PropertyGroup>
				<TargetPlatformMinVersion>10.0.18362.0</TargetPlatformMinVersion>
			</PropertyGroup>
			<ItemGroup>
				<PackageReference Include="Microsoft.UI.Xaml" Version="2.7.0" />
				<PackageReference Include="Microsoft.Xaml.Behaviors.Uwp.Managed" Version="2.0.1" />
			</ItemGroup>
		</When>
		<When Condition="'$(TargetFramework)' == 'net6.0-windows10.0.22000.0'">
			<PropertyGroup>
				<TargetPlatformMinVersion>10.0.18362.0</TargetPlatformMinVersion>
				<DefineConstants>WinUI</DefineConstants>
				<UseWinUI>true</UseWinUI>
			</PropertyGroup>

			<ItemGroup>
				<PackageReference Include="Microsoft.ProjectReunion.WinUI" Version="0.8.5" />
			</ItemGroup>

			<ItemGroup>
				<Reference Include="Microsoft.Xaml.Interactions">
					<HintPath>..\..\resources\Microsoft.Xaml.Interactions.dll</HintPath>
				</Reference>
				<Reference Include="Microsoft.Xaml.Interactivity">
					<HintPath>..\..\resources\Microsoft.Xaml.Interactivity.dll</HintPath>
				</Reference>
			</ItemGroup>
		</When>
		<Otherwise>
			<ItemGroup>
				<PackageReference Include="Microsoft.Windows.Compatibility" Version="6.0.0" />
				<PackageReference Include="Uno.Microsoft.Xaml.Behaviors.WinUI.Managed" Version="2.0.5" />
				<PackageReference Include="Uno.WinUI.WebAssembly" Version="3.11.6" />
			</ItemGroup>
		</Otherwise>
	</Choose>

	<ItemGroup>
		<None Remove="Controls\Buttons\BaseDialogButtons.xaml" />
		<None Remove="Controls\Console\Console.xaml" />
		<None Remove="Controls\ErrorPresenter\ErrorPresenter.xaml" />
		<None Remove="Controls\ImageView\ImageView.xaml" />
		<None Remove="Controls\Menu\BaseMenu.xaml" />
		<None Remove="Controls\Tiles\Tile.xaml" />
		<None Remove="Views\SelectionView.xaml" />
		<None Remove="Windows\LanguageWindow.xaml" />
		<None Remove="Windows\NoteWindow.xaml" />
		<None Remove="Windows\ThemeWindow.xaml" />
	</ItemGroup>

	<ItemGroup>
		<Page Include="Controls\Buttons\BaseDialogButtons.xaml" />
		<Page Include="Controls\Console\Console.xaml" />
		<Page Include="Controls\ErrorPresenter\ErrorPresenter.xaml" />
		<Page Include="Controls\ImageView\ImageView.xaml" />
		<Page Include="Controls\Menu\BaseMenu.xaml" />
		<Page Include="Controls\Tiles\Tile.xaml" />
		<Page Include="Views\SelectionView.xaml" />
		<Page Include="Windows\LanguageWindow.xaml" />
		<Page Include="Windows\NoteWindow.xaml" />
		<Page Include="Windows\ThemeWindow.xaml" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\ISynergy.Framework.Core\ISynergy.Framework.Core.csproj" />
		<ProjectReference Include="..\ISynergy.Framework.Mvvm\ISynergy.Framework.Mvvm.csproj" />
		<ProjectReference Include="..\ISynergy.Framework.UI.Common\ISynergy.Framework.UI.Common.csproj" />
	</ItemGroup>
</Project>
