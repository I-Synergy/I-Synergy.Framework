<Project Sdk="Microsoft.NET.Sdk">
	<Import Project="..\..\project.props" />

	<PropertyGroup>
		<TargetFrameworks>netstandard2.0;net5.0;net6.0</TargetFrameworks>
		<PackageId>I-Synergy.Framework.Synchronization.Files</PackageId>
		<Description>I-Synergy Framework Files Synchronization for .Net Standard 2.0, .Net 5.0 and .Net 6.0</Description>
		<PackageTags>I-Synergy, Framework, Synchronization, Files</PackageTags>
		<IncludeSymbols>true</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<CodeAnalysisRuleSet>..\..\.sonarlint\i-synergy.frameworkcsharp.ruleset</CodeAnalysisRuleSet>
	</PropertyGroup>

	<ItemGroup>
		<AdditionalFiles Include="..\..\.sonarlint\i-synergy.framework\CSharp\SonarLint.xml" Link="SonarLint.xml" />
	</ItemGroup>

	<ItemGroup>
	  <PackageReference Include="Flurl.Http" Version="3.2.2" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\ISynergy.Framework.Synchronization.Core\ISynergy.Framework.Synchronization.Core.csproj" />
	</ItemGroup>
</Project>
