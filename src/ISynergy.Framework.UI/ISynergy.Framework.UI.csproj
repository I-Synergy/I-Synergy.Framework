<Project Sdk="Microsoft.NET.Sdk">
	<Import Project="..\..\project.props" />

	<PropertyGroup>
		<TargetFrameworks>net6.0;net6.0-windows10.0.22000.0</TargetFrameworks>
		<PackageId>I-Synergy.Framework.UI</PackageId>
		<Description>I-Synergy Framework UI for .Net 6.0 and WinUI</Description>
		<PackageTags>I-Synergy, Framework, UI, WinUI, net6.0</PackageTags>
		<GenerateLibraryLayout>true</GenerateLibraryLayout>
		<IncludeSymbols>true</IncludeSymbols>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<IncludeSymbols>true</IncludeSymbols>
		<IncludeBuildOutput>true</IncludeBuildOutput>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<EnableDefaultPageItems>false</EnableDefaultPageItems>
	</PropertyGroup>

	<ItemGroup>
	  <None Remove="Controls\Buttons\BaseDialogButtons.xaml" />
	  <None Remove="Controls\Console\Console.xaml" />
	  <None Remove="Controls\ErrorPresenter\ErrorPresenter.xaml" />
	  <None Remove="Controls\ImageView\ImageView.xaml" />
	  <None Remove="Controls\Menu\BaseMenu.xaml" />
	  <None Remove="Controls\Tiles\Tile.xaml" />
	  <None Remove="Views\SelectionView.xaml" />
	  <None Remove="Windows\LanguageWindow.xaml" />
	  <None Remove="Windows\NoteWindow.xaml" />
	  <None Remove="Windows\ThemeWindow.xaml" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Logging" Version="6.0.0" />
		<PackageReference Include="Microsoft.Extensions.Logging.Debug" Version="6.0.0" />
		<PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
	</ItemGroup>
		
	<Choose>
		<When Condition="'$(TargetFramework)' == 'net6.0-windows10.0.22000.0'">
			<PropertyGroup>
				<TargetPlatformMinVersion>10.0.18362.0</TargetPlatformMinVersion>
				<DefineConstants>WinUI</DefineConstants>
				<UseWinUI>true</UseWinUI>
			</PropertyGroup>

			<ItemGroup>
				<PackageReference Include="Microsoft.WindowsAppSDK" Version="1.0.0" />
				<PackageReference Include="Microsoft.Extensions.Logging.Console" Version="6.0.0" />
				<PackageReference Include="Microsoft.Xaml.Behaviors.WinUI.Managed" Version="2.0.8" />
			</ItemGroup>
		</When>
		<Otherwise>
			<ItemGroup>
				<PackageReference Include="Microsoft.Windows.Compatibility" Version="6.0.0" />
				<PackageReference Include="Uno.Extensions.Logging.WebAssembly.Console" Version="1.1.0" />
				<PackageReference Include="Uno.Microsoft.Xaml.Behaviors.WinUI.Managed" Version="2.0.5" />
				<PackageReference Include="Uno.WinUI.WebAssembly" Version="3.11.6" />
			</ItemGroup>
		</Otherwise>
	</Choose>
		
	<ItemGroup>
	  <Page Include="Controls\Buttons\BaseDialogButtons.xaml" />
	  <Page Include="Controls\Console\Console.xaml" />
	  <Page Include="Controls\ErrorPresenter\ErrorPresenter.xaml" />
	  <Page Include="Controls\ImageView\ImageView.xaml" />
	  <Page Include="Controls\Menu\BaseMenu.xaml" />
	  <Page Include="Controls\Tiles\Tile.xaml" />
	  <Page Include="Views\SelectionView.xaml" />
	  <Page Include="Windows\LanguageWindow.xaml" />
	  <Page Include="Windows\NoteWindow.xaml" />
	  <Page Include="Windows\ThemeWindow.xaml" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\ISynergy.Framework.Core\ISynergy.Framework.Core.csproj" />
		<ProjectReference Include="..\ISynergy.Framework.Mvvm\ISynergy.Framework.Mvvm.csproj" />
	</ItemGroup>

	<ItemGroup>
		<EmbeddedResource Update="Properties\Resources.resx">
			<Generator>PublicResXFileCodeGenerator</Generator>
		</EmbeddedResource>
	</ItemGroup>
	
	<ItemGroup>
	  <Compile Update="Properties\Resources.Designer.cs">
	    <DesignTime>True</DesignTime>
	  </Compile>
	</ItemGroup>
</Project>
