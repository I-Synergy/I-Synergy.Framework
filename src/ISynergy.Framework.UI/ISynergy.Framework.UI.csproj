<Project Sdk="MSBuild.Sdk.Extras">
	<Import Project="..\..\project.props" />
	
	<PropertyGroup>
		<TargetFrameworks>uap10.0.18362;net5.0-windows10.0.18362.0;netstandard2.0;MonoAndroid11.0</TargetFrameworks>
		
		<!-- Ensures the .xr.xml files are generated in a proper layout folder -->
		<GenerateLibraryLayout>true</GenerateLibraryLayout>

		<!-- SonarQube needs this -->
		<ProjectGuid>{837B30FA-B4F1-4ECE-B8B7-656C76C469CB}</ProjectGuid>

		<PackageId>I-Synergy.Framework.UI</PackageId>
		<Description>I-Synergy UI Framework for Uno Platform Applications</Description>
		<PackageTags>I-Synergy, Framework, UI, Uno, Platform, UWP, WinUI, WebAssembly, WASM, Android and .Net 5.0</PackageTags>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<IncludeSymbols>true</IncludeSymbols>
		<IncludeBuildOutput>true</IncludeBuildOutput>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<EnableDefaultPageItems>false</EnableDefaultPageItems>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="5.0.0" />
		<PackageReference Include="Microsoft.Extensions.Logging" Version="5.0.0" />
		<PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
	</ItemGroup>

	<Choose>
		<When Condition="$(TargetFramework.StartsWith('net5.0-windows'))">
			<PropertyGroup>
				<DefineConstants>NET5_0;WINDOWS</DefineConstants>
				<TargetPlatformMinVersion>10.0.18362.0</TargetPlatformMinVersion>
				<RuntimeIdentifiers>win10-x86;win10-x64;win10-arm64</RuntimeIdentifiers>
			</PropertyGroup>
			<ItemGroup>
				<PackageReference Include="CommunityToolkit.WinUI.UI.Controls" Version="7.0.2" />
				<PackageReference Include="Microsoft.ProjectReunion" Version="0.5.7" />
				<PackageReference Include="Microsoft.ProjectReunion.Foundation" Version="0.5.7" />
				<PackageReference Include="Microsoft.ProjectReunion.WinUI" Version="0.5.7" />
				
				<FrameworkReference Update="Microsoft.Windows.SDK.NET.Ref" RuntimeFrameworkVersion="10.0.18362.16" />
				<FrameworkReference Update="Microsoft.Windows.SDK.NET.Ref" TargetingPackVersion="10.0.18362.16" />
			</ItemGroup>
		</When>
		<When Condition="$(TargetFramework.StartsWith('uap10.0'))">
			<PropertyGroup>
				<DefineConstants>NETFX_CORE</DefineConstants>
				<TargetPlatformIdentifier>UAP</TargetPlatformIdentifier>
				<TargetPlatformVersion Condition=" '$(TargetPlatformVersion)' == '' ">10.0.18362.0</TargetPlatformVersion>
				<TargetPlatformMinVersion>10.0.18362.0</TargetPlatformMinVersion>
			</PropertyGroup>
			<ItemGroup>
				<PackageReference Include="Microsoft.UI.Xaml" Version="2.5.0" />
				<PackageReference Include="Microsoft.Toolkit.Uwp.UI.Controls.Layout" Version="7.0.2" />
			</ItemGroup>
		</When>
		<Otherwise>
			<ItemGroup>
				<PackageReference Include="Uno.UI" Version="3.7.6" />
				<PackageReference Include="Uno.Microsoft.Toolkit.Uwp.UI.Controls.Layout" Version="7.0.0" />
			</ItemGroup>
		</Otherwise>
	</Choose>

	<ItemGroup>
		<ProjectReference Include="..\ISynergy.Framework.Core\ISynergy.Framework.Core.csproj" />
		<ProjectReference Include="..\ISynergy.Framework.Mvvm\ISynergy.Framework.Mvvm.csproj" />
	</ItemGroup>

	<ItemGroup>
	  <EmbeddedResource Update="Properties\Resources.resx">
	    <Generator>PublicResXFileCodeGenerator</Generator>
	  </EmbeddedResource>
	</ItemGroup>
	
	<ItemGroup>
		<Page Include="**\*.xaml" Exclude="bin\**\*.xaml;obj\**\*.xaml" />
		<Compile Update="**\*.xaml.cs">
			<DependentUpon>%(Filename)</DependentUpon>
		</Compile>
	</ItemGroup>
	<ItemGroup>
		<UpToDateCheckInput Include="**\*.xaml" Exclude="bin\**\*.xaml;obj\**\*.xaml" />
	</ItemGroup>
	<ItemGroup>
	  <None Remove="Controls\ImageView\ImageView.xaml" />
	</ItemGroup>
	<ItemGroup>
	  <UpToDateCheckInput Remove="Controls\ImageView\ImageView.xaml" />
	</ItemGroup>
	<ItemGroup>
	  <Compile Update="Properties\Resources.Designer.cs">
	    <DesignTime>True</DesignTime>
	  </Compile>
	</ItemGroup>
	<ItemGroup>
	  <Page Update="Controls\ImageView\ImageView.xaml">
	    <SubType>Designer</SubType>
	  </Page>
	</ItemGroup>
</Project>
