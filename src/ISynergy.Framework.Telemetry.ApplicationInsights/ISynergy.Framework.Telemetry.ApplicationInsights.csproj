<Project Sdk="MSBuild.Sdk.Extras">
	<Import Project="..\..\project.props" />

	<PropertyGroup>
		<TargetFrameworks>net6.0-windows10.0.18362</TargetFrameworks>
		<PackageId>I-Synergy.Framework.Telemetry.ApplicationInsights</PackageId>
		<Description>I-Synergy Framework ApplicationInsights Telemetry library for Windows</Description>
		<PackageTags>I-Synergy, Framework, Telemetry, ApplicationInsights, Windows, Uno</PackageTags>
		<RootNamespace>ISynergy.Framework.Telemetry.ApplicationInsights</RootNamespace>
		<GenerateLibraryLayout>true</GenerateLibraryLayout>
		<EnablePreviewMsixTooling>true</EnablePreviewMsixTooling>
		<IncludeSymbols>true</IncludeSymbols>
		<GeneratePackageOnBuild>false</GeneratePackageOnBuild>
		<IncludeSymbols>true</IncludeSymbols>
		<IncludeBuildOutput>true</IncludeBuildOutput>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
	</PropertyGroup>
	<ItemGroup>
		<PackageReference Include="Uno.WinUI" Version="4.5.14" />
		<PackageReference Include="Microsoft.ApplicationInsights.WorkerService" Version="2.21.0" />
		<PackageReference Include="Microsoft.Extensions.Options" Version="6.0.0" />
	</ItemGroup>
	<ItemGroup Condition="'$(TargetFramework)'=='net6.0-windows10.0.18362'">
		<PackageReference Include="Microsoft.WindowsAppSDK" Version="1.1.5" />
		<FrameworkReference Update="Microsoft.Windows.SDK.NET.Ref" RuntimeFrameworkVersion="10.0.22000.24" />
		<FrameworkReference Update="Microsoft.Windows.SDK.NET.Ref" TargetingPackVersion="10.0.22000.24" />
	</ItemGroup>
	<ItemGroup Condition="'$(TargetFramework)'!='net6.0-windows10.0.18362'">
		<Page Include="**\*.xaml" Exclude="bin\**\*.xaml;obj\**\*.xaml" />
		<Compile Update="**\*.xaml.cs">
			<DependentUpon>%(Filename)</DependentUpon>
		</Compile>
	</ItemGroup>
	<ItemGroup>
		<UpToDateCheckInput Include="**\*.xaml" Exclude="bin\**\*.xaml;obj\**\*.xaml" />
	</ItemGroup>
	<ItemGroup>
		<ProjectReference Include="..\ISynergy.Framework.Core\ISynergy.Framework.Core.csproj" />
		<ProjectReference Include="..\ISynergy.Framework.Telemetry\ISynergy.Framework.Telemetry.csproj" />
	</ItemGroup>
</Project>