<Project Sdk="Microsoft.NET.Sdk">
    <Import Project="..\..\project.props" />

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <PackageId>I-Synergy.Framework.Mvvm</PackageId>
        <Description>I-Synergy Framework Mvvm for .Net 6.0</Description>
        <PackageTags>I-Synergy, Framework, Mvvm</PackageTags>
		<GenerateLibraryLayout>true</GenerateLibraryLayout>
		<IncludeSymbols>true</IncludeSymbols>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<IncludeSymbols>true</IncludeSymbols>
		<IncludeBuildOutput>true</IncludeBuildOutput>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
    </PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Logging" Version="6.0.0" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\ISynergy.Framework.Core\ISynergy.Framework.Core.csproj" />
	</ItemGroup>

	<ItemGroup>
	  <Compile Update="Properties\Resources.Designer.cs">
	    <DesignTime>True</DesignTime>
	    <AutoGen>True</AutoGen>
	    <DependentUpon>Resources.resx</DependentUpon>
	  </Compile>
	</ItemGroup>

	<ItemGroup>
	  <EmbeddedResource Update="Properties\Resources.resx">
	    <Generator>PublicResXFileCodeGenerator</Generator>
	    <LastGenOutput>Resources.Designer.cs</LastGenOutput>
	  </EmbeddedResource>
	</ItemGroup>

	<ItemGroup>
		<Using Include="ISynergy.Framework.Core.Abstractions" />
		<Using Include="ISynergy.Framework.Core.Abstractions.Base" />
		<Using Include="ISynergy.Framework.Core.Abstractions.Services" />
		<Using Include="ISynergy.Framework.Core.Attributes" />
		<Using Include="ISynergy.Framework.Core.Base" />
		<Using Include="ISynergy.Framework.Core.Enumerations" />
		<Using Include="ISynergy.Framework.Core.Events" />
		<Using Include="ISynergy.Framework.Core.Extensions" />
		<Using Include="ISynergy.Framework.Core.Utilities" />
		<Using Include="ISynergy.Framework.Core.Validation" />
		<Using Include="ISynergy.Framework.Mvvm.Abstractions" />
		<Using Include="ISynergy.Framework.Mvvm.Abstractions.Services" />
		<Using Include="ISynergy.Framework.Mvvm.Abstractions.ViewModels" />
		<Using Include="ISynergy.Framework.Mvvm.Commands" />
		<Using Include="ISynergy.Framework.Mvvm.Enumerations" />
		<Using Include="ISynergy.Framework.Mvvm.Events" />
		<Using Include="ISynergy.Framework.Mvvm.Models" />
		<Using Include="Microsoft.Extensions.Logging" />
		<Using Include="System.Collections.ObjectModel" />
		<Using Include="System.ComponentModel" />
		<Using Include="System.ComponentModel.DataAnnotations" />
		<Using Include="System.Windows.Input" />
	</ItemGroup>
</Project>
