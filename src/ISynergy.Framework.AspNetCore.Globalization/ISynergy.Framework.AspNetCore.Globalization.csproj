<Project Sdk="Microsoft.NET.Sdk">
    <Import Project="..\..\project.props" />
    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
		<PackageId>I-Synergy.Framework.AspNetCore.Globalization</PackageId>
		<Description>I-Synergy Framework Globalization for .Net 7.0</Description>
		<PackageTags>I-Synergy, Framework, Globalization</PackageTags>
		<GenerateLibraryLayout>true</GenerateLibraryLayout>
		<CodeAnalysisRuleSet>ISynergy.Framework.AspNetCore.Globalization.ruleset</CodeAnalysisRuleSet>
    </PropertyGroup>
    <ItemGroup>
      <AdditionalFiles Include="..\..\.sonarlint\i-synergy.framework\CSharp\SonarLint.xml" Link="SonarLint.xml" />
    </ItemGroup>
    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Http" Version="2.2.2" />
        <PackageReference Include="Microsoft.AspNetCore.Http.Extensions" Version="2.2.0" />
        <PackageReference Include="System.Resources.ResourceManager" Version="4.3.0" />
    </ItemGroup>
    <ItemGroup>
      <ProjectReference Include="..\ISynergy.Framework.Core\ISynergy.Framework.Core.csproj" />
    </ItemGroup>

	<ItemGroup>
		<Using Include="ISynergy.Framework.Core.Abstractions.Services" />
		<Using Include="Microsoft.AspNetCore.Http" />
		<Using Include="System.Globalization" />
		<Using Include="System.Resources" />
	</ItemGroup>
</Project>
