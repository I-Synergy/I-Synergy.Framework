<Project Sdk="Microsoft.NET.Sdk">
    <Import Project="..\..\project.props" />
    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
		<PackageId>I-Synergy.Framework.Monitoring.SignalR</PackageId>
		<Description>I-Synergy Framework SignalR Monitoring for .Net 6.0</Description>
		<PackageTags>I-Synergy, Framework, Monitoring, SignalR</PackageTags>
		<GenerateLibraryLayout>true</GenerateLibraryLayout>
		<IncludeSymbols>true</IncludeSymbols>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<IncludeSymbols>true</IncludeSymbols>
		<IncludeBuildOutput>true</IncludeBuildOutput>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<RootNamespace>ISynergy.Framework.Monitoring</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.SignalR" Version="1.1.0" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\ISynergy.Framework.AspNetCore.Authentication\ISynergy.Framework.AspNetCore.Authentication.csproj" />
        <ProjectReference Include="..\ISynergy.Framework.MessageBus\ISynergy.Framework.MessageBus.csproj" />
        <ProjectReference Include="..\ISynergy.Framework.Monitoring\ISynergy.Framework.Monitoring.csproj" />
    </ItemGroup>

	<ItemGroup>
		<Using Include="ISynergy.Framework.AspNetCore.Authentication.Exceptions"/>
		<Using Include="ISynergy.Framework.AspNetCore.Authentication.Extensions"/>
		<Using Include="ISynergy.Framework.Core.Constants"/>
		<Using Include="ISynergy.Framework.MessageBus.Models"/>
		<Using Include="ISynergy.Framework.Monitoring.Enumerations"/>
		<Using Include="ISynergy.Framework.Monitoring.Accessors"/>
		<Using Include="ISynergy.Framework.Monitoring.Abstractions.Services"/>
		<Using Include="ISynergy.Framework.Monitoring.Hubs"/>
		<Using Include="Microsoft.AspNetCore.SignalR"/>
		<Using Include="Microsoft.AspNetCore.Authorization"/>
		<Using Include="Microsoft.Extensions.Logging"/>
	</ItemGroup>
</Project>
