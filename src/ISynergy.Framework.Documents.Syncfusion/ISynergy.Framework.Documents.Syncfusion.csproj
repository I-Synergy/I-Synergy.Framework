<Project Sdk="Microsoft.NET.Sdk">
    <Import Project="..\..\project.props" />
    <PropertyGroup>
		<TargetFrameworks>netstandard2.0</TargetFrameworks>
		<PackageId>I-Synergy.Framework.Documents.Syncfusion</PackageId>
		<Description>I-Synergy Framework Documents with Syncfusion for .Net Standard 2.0</Description>
		<PackageTags>I-Synergy, Framework, Documents, Syncfusion</PackageTags>
		<GenerateLibraryLayout>true</GenerateLibraryLayout>
		<IncludeSymbols>true</IncludeSymbols>
		<GeneratePackageOnBuild>false</GeneratePackageOnBuild>
		<IncludeSymbols>true</IncludeSymbols>
		<IncludeBuildOutput>true</IncludeBuildOutput>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<RootNamespace>ISynergy.Framework.Documents</RootNamespace>
		<CodeAnalysisRuleSet>..\..\.sonarlint\i-synergy.frameworkcsharp.ruleset</CodeAnalysisRuleSet>
    </PropertyGroup>
    <ItemGroup>
      <AdditionalFiles Include="..\..\.sonarlint\i-synergy.framework\CSharp\SonarLint.xml" Link="SonarLint.xml" />
    </ItemGroup>
    <ItemGroup>
        <ProjectReference Include="..\ISynergy.Framework.Core\ISynergy.Framework.Core.csproj" />
        <ProjectReference Include="..\ISynergy.Framework.Documents\ISynergy.Framework.Documents.csproj" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Options" Version="6.0.0" />
        <PackageReference Include="Syncfusion.DocIO.Net.Core" Version="20.2.0.39" />
        <PackageReference Include="Syncfusion.DocIORenderer.Net.Core" Version="20.2.0.39" />
        <PackageReference Include="Syncfusion.Licensing" Version="20.2.0.39" />
        <PackageReference Include="Syncfusion.Pdf.Net.Core" Version="20.2.0.39" />
        <PackageReference Include="Syncfusion.XlsIO.Net.Core" Version="20.2.0.39" />
    </ItemGroup>
</Project>
