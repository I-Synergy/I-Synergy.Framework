<Project Sdk="Microsoft.NET.Sdk">
    <Import Project="..\..\project.props" />

    <PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
        <PackageId>I-Synergy.Framework.Storage.Azure</PackageId>
        <Description>I-Synergy Framework Azure Storage for .Net 6.0</Description>
        <PackageTags>I-Synergy, Framework, Azure, Storage</PackageTags>
		<GenerateLibraryLayout>true</GenerateLibraryLayout>
		<IncludeSymbols>true</IncludeSymbols>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<IncludeSymbols>true</IncludeSymbols>
		<IncludeBuildOutput>true</IncludeBuildOutput>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<RootNamespace>ISynergy.Framework.Storage</RootNamespace>
    </PropertyGroup>

	<ItemGroup>
		<PackageReference Include="System.Text.Encodings.Web" Version="6.0.0" />
        <PackageReference Include="Azure.Storage.Blobs" Version="12.10.0" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\ISynergy.Framework.AspNetCore\ISynergy.Framework.AspNetCore.csproj" />
        <ProjectReference Include="..\ISynergy.Framework.Storage\ISynergy.Framework.Storage.csproj" />
    </ItemGroup>

	<ItemGroup>
		<Using Include="Azure" />
		<Using Include="Azure.Storage.Blobs" />
		<Using Include="Azure.Storage.Blobs.Models" />
		<Using Include="ISynergy.Framework.Core.Abstractions.Services" />
		<Using Include="ISynergy.Framework.Core.Validation" />
		<Using Include="ISynergy.Framework.Storage.Abstractions.Options" />
		<Using Include="ISynergy.Framework.Storage.Abstractions.Services" />
		<Using Include="Microsoft.Extensions.Options" />
	</ItemGroup>
</Project>
