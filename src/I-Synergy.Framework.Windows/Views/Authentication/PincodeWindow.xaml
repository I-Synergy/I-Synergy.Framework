<w:Window xmlns:w="using:ISynergy.Controls"
    x:Class="ISynergy.Views.Authentication.PincodeWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ISynergy.Views.Authentication"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="{Binding Title}"
    PrimaryButtonCommand="{Binding Submit_Command}"
    SecondaryButtonCommand="{Binding Close_Command}"
    PrimaryButtonStyle="{ThemeResource DefaultButtonStyle}"
    SecondaryButtonStyle="{ThemeResource DefaultButtonStyle}">

    <Grid Margin="10">
        <PasswordBox x:Name="PasswordBox_Pincode" x:Uid="PasswordBox_Pincode" Password="{Binding Pincode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" InputScope="Number" />
    </Grid>
</w:Window>
