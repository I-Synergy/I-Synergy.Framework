<Project Sdk="Microsoft.NET.Sdk">
    <Import Project="..\..\project.props" />

    <PropertyGroup>
        <TargetFrameworks>net7.0</TargetFrameworks>
        <PackageId>I-Synergy.Framework.EntityFramework</PackageId>
        <Description>I-Synergy Entity Framework for .Net 7.0</Description>
        <PackageTags>I-Synergy, Entity, Framework</PackageTags>
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<GeneratePackageOnBuild>false</GeneratePackageOnBuild>
        <CodeAnalysisRuleSet>ISynergy.Framework.EntityFramework.ruleset</CodeAnalysisRuleSet>
    </PropertyGroup>

    <ItemGroup>
      <AdditionalFiles Include="..\..\.sonarlint\i-synergy.framework\CSharp\SonarLint.xml" Link="SonarLint.xml" />
    </ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.AspNetCore.Identity.EntityFrameworkCore" Version="7.0.0" />
		<PackageReference Include="Microsoft.EntityFrameworkCore" Version="7.0.0" />
		<PackageReference Include="Mapster" Version="7.3.0" />
	</ItemGroup>
	
    <ItemGroup>
        <ProjectReference Include="..\ISynergy.Framework.Core\ISynergy.Framework.Core.csproj" />
    </ItemGroup>
</Project>
