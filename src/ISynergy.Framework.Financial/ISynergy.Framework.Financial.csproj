<Project Sdk="Microsoft.NET.Sdk">
    <Import Project="..\..\project.props" />

    <PropertyGroup>
		<TargetFrameworks>netstandard2.0;net6.0</TargetFrameworks>
        <PackageId>I-Synergy.Framework.Financial</PackageId>
        <Description>I-Synergy Financial Framework for .Net Standard 2.0 and .Net 6.0</Description>
        <PackageTags>I-Synergy, Financial, Framework</PackageTags>
		<GenerateLibraryLayout>true</GenerateLibraryLayout>
		<IncludeSymbols>true</IncludeSymbols>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<IncludeSymbols>true</IncludeSymbols>
		<IncludeBuildOutput>true</IncludeBuildOutput>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\ISynergy.Framework.Core\ISynergy.Framework.Core.csproj" />
    </ItemGroup>

	<ItemGroup>
		<Using Include="System"/>
		<Using Include ="ISynergy.Framework.Core.Extensions"/>
	</ItemGroup>
</Project>
