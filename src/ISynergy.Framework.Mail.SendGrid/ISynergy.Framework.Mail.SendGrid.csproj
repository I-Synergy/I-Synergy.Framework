<Project Sdk="Microsoft.NET.Sdk">
    <Import Project="..\..\project.props" />
    <PropertyGroup>
		<TargetFrameworks>netstandard2.0;net6.0</TargetFrameworks>
		<PackageId>I-Synergy.Framework.Mail.SendGrid</PackageId>
		<Description>I-Synergy Framework Mail with SendGrid for .Net Standard 2.0 and .Net 6.0</Description>
		<PackageTags>I-Synergy, Framework, Mail, SendGrid</PackageTags>
		<GenerateLibraryLayout>true</GenerateLibraryLayout>
		<IncludeSymbols>true</IncludeSymbols>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<IncludeSymbols>true</IncludeSymbols>
		<IncludeBuildOutput>true</IncludeBuildOutput>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<RootNamespace>ISynergy.Framework.Mail</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="6.0.0" />
        <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="6.0.0" />
        <PackageReference Include="Microsoft.Extensions.Options" Version="6.0.0" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\ISynergy.Framework.Mail\ISynergy.Framework.Mail.csproj" />
    </ItemGroup>

	<ItemGroup>
		<Using Include="ISynergy.Framework.Core.Validation"/>
		<Using Include="ISynergy.Framework.Mail.Abstractions.Services"/>
		<Using Include="ISynergy.Framework.Mail.Models"/>
		<Using Include="ISynergy.Framework.Mail.Options"/>
		<Using Include="Microsoft.Extensions.Configuration"/>
		<Using Include="Microsoft.Extensions.Logging"/>
		<Using Include="Microsoft.Extensions.Options"/>
		<Using Include="SendGrid"/>
		<Using Include="SendGrid.Helpers.Mail"/>
	</ItemGroup>
</Project>
