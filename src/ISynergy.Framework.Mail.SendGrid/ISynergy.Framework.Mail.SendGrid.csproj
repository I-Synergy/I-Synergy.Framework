		<PackageId>I-Synergy.Framework.Mail.SendGrid</PackageId>
		<Description>I-Synergy Framework Mail with SendGrid for .net 8.0</Description>
		<PackageTags>I-Synergy, Framework, Mail, SendGrid</PackageTags>
		<GenerateLibraryLayout>true</GenerateLibraryLayout>
		<RootNamespace>ISynergy.Framework.Mail</RootNamespace>
		<CodeAnalysisRuleSet>ISynergy.Framework.Mail.SendGrid.ruleset</CodeAnalysisRuleSet>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="SendGrid"  />
		<PackageReference Include="Microsoft.Extensions.Configuration.Abstractions"  />
		<PackageReference Include="Microsoft.Extensions.Logging.Abstractions"  />
		<PackageReference Include="Microsoft.Extensions.Options"  />
	</ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\ISynergy.Framework.Mail\ISynergy.Framework.Mail.csproj" />
    </ItemGroup>
</Project>
