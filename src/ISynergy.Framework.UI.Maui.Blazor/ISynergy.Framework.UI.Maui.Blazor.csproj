<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
	  <TargetFrameworks>net9.0;</TargetFrameworks>
	  <RootNamespace>ISynergy.Framework.UI</RootNamespace>
	  <PackageId>I-Synergy.Framework.UI.Maui.Blazor</PackageId>
	  <Description>I-Synergy Framework UI for Maui Hybrid with Blazor</Description>
	  <PackageTags>I-Synergy, Framework, UI, Maui, Hybrid, Blazor</PackageTags>
	  <GenerateLibraryLayout>true</GenerateLibraryLayout>
	  <IncludeSymbols>true</IncludeSymbols>
  </PropertyGroup>

	<ItemGroup>
		<SupportedPlatform Include="browser" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Maui.Controls" />
		<PackageReference Include="Microsoft.AspNetCore.WebUtilities" />
		<PackageReference Include="OpenIddict.Abstractions" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\ISynergy.Framework.UI.Blazor\ISynergy.Framework.UI.Blazor.csproj" />
	</ItemGroup>
</Project>
