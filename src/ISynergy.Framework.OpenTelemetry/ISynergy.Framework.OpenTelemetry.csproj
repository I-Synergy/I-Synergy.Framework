<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net8.0;net9.0</TargetFrameworks>
		<PackageId>I-Synergy.Framework.OpenTelemetry</PackageId>
		<Description>I-Synergy Framework OpenTelemetry library for .Net</Description>
		<PackageTags>I-Synergy, Framework, OpenTelemetry</PackageTags>
		<RootNamespace>ISynergy.Framework.OpenTelemetry</RootNamespace>
		<GenerateLibraryLayout>true</GenerateLibraryLayout>
		<EnableMsixTooling>true</EnableMsixTooling>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Http.Resilience" />
		<PackageReference Include="OpenTelemetry" />
		<PackageReference Include="OpenTelemetry.Exporter.Console" />
		<PackageReference Include="OpenTelemetry.Exporter.OpenTelemetryProtocol" />
		<PackageReference Include="OpenTelemetry.Extensions.Hosting" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\ISynergy.Framework.Core\ISynergy.Framework.Core.csproj" />
	</ItemGroup>

	<ItemGroup>
		<InternalsVisibleTo Include="ISynergy.Framework.OpenTelemetry.ApplicationInsights," />
		<InternalsVisibleTo Include="ISynergy.Framework.OpenTelemetry.Sentry," />
		<InternalsVisibleTo Include="ISynergy.Framework.OpenTelemetry.Tests," />
	</ItemGroup>
</Project>
