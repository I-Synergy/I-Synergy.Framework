<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<PackageId>I-Synergy.Framework.Logging.ApplicationInsights</PackageId>
		<Description>I-Synergy Framework ApplicationInsights Logging library for Windows</Description>
		<PackageTags>I-Synergy, Framework, Logging, ApplicationInsights, Windows, Uno</PackageTags>
		<RootNamespace>ISynergy.Framework.Logging</RootNamespace>
		<GenerateLibraryLayout>true</GenerateLibraryLayout>
		<EnableMsixTooling>true</EnableMsixTooling>
		<CodeAnalysisRuleSet>ISynergy.Framework.Logging.ApplicationInsights.ruleset</CodeAnalysisRuleSet>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.ApplicationInsights"  />
		<PackageReference Include="Microsoft.ApplicationInsights.DependencyCollector"  />
		<PackageReference Include="Microsoft.ApplicationInsights.PerfCounterCollector"  />
		<PackageReference Include="Microsoft.Extensions.Options"  />
		<PackageReference Include="Microsoft.Extensions.Logging.Debug"  />
	</ItemGroup>
	
	<ItemGroup>
		<ProjectReference Include="..\ISynergy.Framework.Core\ISynergy.Framework.Core.csproj" />
		<ProjectReference Include="..\ISynergy.Framework.Logging\ISynergy.Framework.Logging.csproj" />
	</ItemGroup>
</Project>