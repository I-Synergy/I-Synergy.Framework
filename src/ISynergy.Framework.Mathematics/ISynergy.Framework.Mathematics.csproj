<Project Sdk="Microsoft.NET.Sdk">
    <Import Project="..\..\project.props" />

    <PropertyGroup>
		<TargetFrameworks>netstandard2.0;net6.0</TargetFrameworks>
        <PackageId>I-Synergy.Framework.Mathematics</PackageId>
        <Description>I-Synergy Mathematics Framework for .Net Standard 2.0 and .Net 6.0</Description>
        <PackageTags>I-Synergy, Framework, Mathematics</PackageTags>
		<GenerateLibraryLayout>true</GenerateLibraryLayout>
		<IncludeSymbols>true</IncludeSymbols>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<IncludeSymbols>true</IncludeSymbols>
		<IncludeBuildOutput>true</IncludeBuildOutput>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\ISynergy.Framework.Core\ISynergy.Framework.Core.csproj" />
    </ItemGroup>

	<ItemGroup>
		<AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
			<_Parameter1>ISynergy.Framework.Mathematics.Tests</_Parameter1>
		</AssemblyAttribute>
	</ItemGroup>
</Project>
