<Project Sdk="Microsoft.NET.Sdk">
    <Import Project="..\..\project.props" />

    <PropertyGroup>
		<TargetFrameworks>netstandard2.0;net6.0</TargetFrameworks>
        <PackageId>I-Synergy.Framework.Geography</PackageId>
        <Description>I-Synergy Framework Geography for .Net Standard 2.0 and .Net 6.0</Description>
        <PackageTags>I-Synergy, Framework, Geography</PackageTags>
		<GenerateLibraryLayout>true</GenerateLibraryLayout>
		<IncludeSymbols>true</IncludeSymbols>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<IncludeSymbols>true</IncludeSymbols>
		<IncludeBuildOutput>true</IncludeBuildOutput>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\ISynergy.Framework.Core\ISynergy.Framework.Core.csproj" />
    </ItemGroup>

    <ItemGroup>
      <Compile Update="Properties\Resources.Designer.cs">
        <DesignTime>True</DesignTime>
      </Compile>
    </ItemGroup>

	<ItemGroup>
		<Using Include="ISynergy.Framework.Core.Extensions"/>
		<Using Include="ISynergy.Framework.Geography.Common"/>
		<Using Include="ISynergy.Framework.Geography.Global"/>
		<Using Include="ISynergy.Framework.Geography.Projection"/>
		<Using Include="ISynergy.Framework.Geography.Utm"/>
		<Using Include="ISynergy.Framework.Geography.Geodetic"/>
		<Using Include="System.Globalization"/>
		<Using Include="System.Text"/>
	</ItemGroup>
</Project>
