<Project Sdk="Microsoft.NET.Sdk">
    <Import Project="..\..\project.props" />
    <PropertyGroup>
		<TargetFrameworks>netstandard2.0;net6.0;net7.0;net8.0</TargetFrameworks>
		<PackageId>I-Synergy.Framework.Monitoring.Client</PackageId>
		<Description>I-Synergy Framework SignalR Monitoring Client for .Net 7.0</Description>
		<PackageTags>I-Synergy, Framework, Monitoring, Client, SignalR</PackageTags>
		<GenerateLibraryLayout>true</GenerateLibraryLayout>
		<RootNamespace>ISynergy.Framework.Monitoring.Client</RootNamespace>
		<CodeAnalysisRuleSet>ISynergy.Framework.Monitoring.Client.ruleset</CodeAnalysisRuleSet>
    </PropertyGroup>

	<ItemGroup Condition="'$(TargetFramework)'!='net8.0'">
		<PackageReference Include="Microsoft.AspNetCore.SignalR.Client" Version="7.0.11" />
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)'=='net8.0'">
		<PackageReference Include="Microsoft.AspNetCore.SignalR.Client" Version="8.0.0-rc.1.23421.29" />
	</ItemGroup>

	<ItemGroup>
        <ProjectReference Include="..\ISynergy.Framework.Monitoring.Common\ISynergy.Framework.Monitoring.Common.csproj" />
        <ProjectReference Include="..\ISynergy.Framework.Mvvm\ISynergy.Framework.Mvvm.csproj" />
    </ItemGroup>
</Project>
