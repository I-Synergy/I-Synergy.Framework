<Project Sdk="Microsoft.NET.Sdk">
    <Import Project="..\..\project.props" />
    
    <PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
        <PackageId>I-Synergy.Framework.MessageBus.Azure</PackageId>
        <Description>I-Synergy Framework Azure MessageBus for .Net Standard 2.0 and .Net 6.0</Description>
        <PackageTags>I-Synergy, Framework, MessageBus, Azure</PackageTags>
		<GenerateLibraryLayout>true</GenerateLibraryLayout>
		<IncludeSymbols>true</IncludeSymbols>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<IncludeSymbols>true</IncludeSymbols>
		<IncludeBuildOutput>true</IncludeBuildOutput>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<RootNamespace>ISynergy.Framework.MessageBus</RootNamespace>
    </PropertyGroup>

	<ItemGroup>
        <PackageReference Include="Azure.Messaging.ServiceBus" Version="7.5.0" />
        <PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
    </ItemGroup>
	
    <ItemGroup>
        <ProjectReference Include="..\ISynergy.Framework.MessageBus\ISynergy.Framework.MessageBus.csproj" />
    </ItemGroup>

	<ItemGroup>
		<Using Include="Azure.Messaging.ServiceBus"/>
		<Using Include="ISynergy.Framework.Core.Validation"/>
		<Using Include="ISynergy.Framework.MessageBus.Abstractions.Options"/>
		<Using Include="ISynergy.Framework.MessageBus.Abstractions.Services"/>
		<Using Include="Microsoft.Extensions.Logging"/>
		<Using Include="Microsoft.Extensions.Options"/>
		<Using Include="Newtonsoft.Json"/>
		<Using Include="System.Text"/>
	</ItemGroup>
</Project>
